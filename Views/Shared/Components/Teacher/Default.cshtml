@model IEnumerable<Teacher>
@{
    Layout = null;
}

    <input type="hidden"  value="teacher" id="hidden" />
@foreach (var teacher in Model)
{
    <div class="col-md-3 col-sm-4 col-xs-12" style="margin-top:50px">
        <div class="single-teacher">
            <div class="single-teacher-img">
                <a asp-action="Detail"><img src="~/img/teacher/@teacher.Image" alt="teacher"></a>
            </div>
            <div class="single-teacher-content text-center">
                <h2><a asp-controller="Teacher"asp-action="Detail" asp-route-id="@teacher.Id">@teacher.FullName</a></h2>
                <h4>@teacher.Position</h4>
                <ul>
                    <li><a href="@teacher.Twitter"><i class="zmdi zmdi-facebook"></i></a></li>
                    <li><a href="@teacher.VContact"><i class="zmdi zmdi-pinterest"></i></a></li>
                    <li><a href="@teacher.Facebook"><i class="zmdi zmdi-vimeo"></i></a></li>
                    <li><a href="@teacher.Pinterest"><i class="zmdi zmdi-twitter"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
}