@model IEnumerable<Course>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-success mr-2 create-book">create Course</a>
            }
            <div class="card-body">
                <h4 class="card-title">Course Table</h4>

                @if (Model.Count() != 0)
                {
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Startime
                                    </th>
                                    <th>
                                        Duration
                                    </th>
                                    <th>
                                        Class Durtaion
                                    </th>
                                    <th>
                                        Skill Level
                                    </th>
                                    <th>
                                        Language
                                    </th>
                                    <th>
                                        Students Count
                                    </th>
                                    <th>
                                        Assesments
                                    </th>
                                    <th>
                                        Category
                                    </th>
                                    <th>
                                        Setting
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/img/course/@item.Image" style="width:100px;height:100px" />
                                        </td>
                                        <td>
                                            @item.Title
                                        </td>
                                        <td>
                                            @item.StartTime.ToString("dddd, dd MMMM yyyy HH:mm:ss")
                                        </td>
                                        <td>
                                            @item.Duration Month
                                        </td>
                                        <td>
                                            @item.ClassDuration Mins
                                        </td>
                                        <td>
                                            @item.SkilLevel
                                        </td>

                                        <td>
                                            @item.Language
                                        </td>
                                        <td>
                                            @item.StudentsCount
                                        </td>
                                        <td>
                                            @item.Assesments
                                        </td>
                                        <td>
                                            <ul>

                                                @foreach (var category in item.CourseCategories)
                                                {
                                                    if (category != null)
                                                    {
                                                        <li style="list-style:none">@category?.Category?.Name</li>
                                                    }

                                                }

                                            </ul>
                                        </td>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">
                                                <i class="mdi mdi-account-card-details"></i>
                                            </a>
                                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                                <i class="mdi mdi-table-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                                <i class="mdi mdi-delete"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    //<h4 class="card-title">Empty Table</h4>
                }
            </div>
        </div>
    </div>
</div>



