
@model HomeBio
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Bio Table</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Logo
                                </th>
                                <th>
                                    Number
                                </th>
                                <th>
                                    Facebook
                                </th>
                                <th>
                                    Twitter
                                </th>
                                <th>
                                    Pinterest
                                </th>
                                <th>
                                    VContact
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>
                                    <img src="~/img/logo/@Model.Logo" style="width:100px;height:50px" />
                                </td>
                                <td>@Model.Number</td>
                                <td>@Model.Facebook</td>
                                <td>@Model.Twitter</td>
                                <td>@Model.Pinterest</td>
                                <td>@Model.Vcontact</td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

