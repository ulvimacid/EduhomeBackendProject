@model IEnumerable<Speaker>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <a asp-action="Create" class="btn btn-success mr-2 create-book">Add Speaker</a>
            <div class="card-body">
                <h4 class="card-title">Speaker Table</h4>

                @if (Model.Count() != 0)
                {
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Position
                                    </th>
                                    <th>
                                        Setting
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Speaker item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/img/teacher/@item.Image" style="width:100px;height:100px" />
                                        </td>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.Position
                                        </td>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">
                                                <i class="mdi mdi-account-card-details"></i>
                                            </a>
                                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                                <i class="mdi mdi-table-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                                <i class="mdi mdi-delete"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    //<h4 class="card-title">Empty Table</h4>
                }
            </div>
        </div>
    </div>
</div>





