@model UpComingEvent
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <img src="~/img/event/@Model.Image" width="400" height="200" />

</div>
<div class="row mt-5">
    <div class="col-2">
        <h6>Title</h6>
    </div>
    <div class="col-4">
        <p> @Model.Title</p>
    </div>
    

</div>
<div class="row mt-2">
    <div class="col-2">
        <h6>Month</h6>
    </div>
    <div class="col-4">
        <p> @Model.Month.ToString("MMMM")</p>
    </div>
</div>
<div class="row mt-2">
    <div class="col-2">
        <h6>Day</h6>
    </div>
    <div class="col-4">
        <p> @Model.Day.ToString("dd")</p>
    </div>
</div>
<div class="row mt-2">
    <div class="col-2">
        <h6>StartTime</h6>
    </div>
    <div class="col-4">
        <p> @Model.StartTime.ToString("hh:mm tt")</p>
    </div>
</div>
<div class="row">
    <div class="col-2">
        <h6>EndTime</h6>
    </div>
    <div class="col-4">
        <p> @Model.EndTime.ToString("hh:mm tt")</p>
    </div>
</div>
<div class="row mt-2">
    <div class="col-2">
        <h6>Description</h6>
    </div>
    <div class="col-4">
        <p> @Model.Description</p>
    </div>
</div>
<div class="row mt-2">
    <div class="col-2">
        <h6>Speaker</h6>
    </div>
    <div class="col-4">
        <ul>
            @foreach (var item in Model.SpeakerEvents)
            {

                <li style="list-style:none">@item.Speaker.Name</li>

            }
        </ul>
    </div>
  
</div>
<div class="row mt-2">
    <div class="col-2">
        <h6>Category</h6>
    </div>
    <div class="col-4">
        <p> @Model.Category.Name</p>
    </div>
</div>

<div class="row mt-3">
    <a class="btn btn-dark" asp-action="Index">Go Back</a>
</div>
