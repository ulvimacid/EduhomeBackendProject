
@model WhyUs
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Why Us Table</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Question
                                </th>
                                <th>
                                    Answer
                                </th>
                                <th>
                                 Setting
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>@Model.Question</td>
                                <td>@Html.Raw(@Model.Answer)</td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


