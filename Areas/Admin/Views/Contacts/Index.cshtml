@model IEnumerable<Contact>

@{
    ViewData["Title"] = "Index";
}

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Contact Table</h4>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Icon
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Info
                                    </th>
                                    <th>
                                        Setting
                                    </th>

                                </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <td>
                                        <img src="~/img/contact/@Model.ElementAt(0).Image" style="width:50px;height:50px" />
                                    </td>
                                    <td>@Model.ElementAt(0).TitleHeader</td>
                                    <td>@Model.ElementAt(0).Info</td>

                                    <td>
                                        <a asp-action="Update" asp-route-id="@Model.ElementAt(0).Id" class="btn btn-warning">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <img src="~/img/contact/@Model.ElementAt(1).Image" style="width:50px;height:50px" />
                                    </td>
                                    <td>@Model.ElementAt(1).TitleHeader</td>
                                    <td>@Model.ElementAt(1).Info</td>

                                    <td>
                                        <a asp-action="Update" asp-route-id="@Model.ElementAt(1).Id" class="btn btn-warning">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <img src="~/img/contact/@Model.ElementAt(2).Image" style="width:50px;height:50px" />
                                    </td>
                                    <td>@Model.ElementAt(2).TitleHeader</td>
                                    <td>@Model.ElementAt(2).Info</td>

                                    <td>
                                        <a asp-action="Update" asp-route-id="@Model.ElementAt(2).Id" class="btn btn-warning">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

